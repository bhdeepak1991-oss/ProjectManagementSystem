<!-- ✅ FullCalendar CSS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />

<!-- ✅ FullCalendar JS (Global Bundle that includes all plugins like dayGrid) -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>


<style>
    /* Optional styling */
    #calendar {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
</style>

<div class="container">
    <div id="calendar"></div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const calendarEl = document.getElementById('calendar');

     $.get("Vacation/GetCalendardetail", function (resp) {
               
        const calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            height: 'auto',

            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
            },

            events: resp,

            eventClick: function(info) {
                const desc = info.event.extendedProps.description || "No description added";
                alert("Leave Details:\n\n" + desc);
            }
        });

        calendar.render();
    });

     
    });
</script>







