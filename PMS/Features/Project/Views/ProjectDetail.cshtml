@model PMS.Features.Project.ViewModels.ProjectDetailVm

<div class="content-wrapper" style="min-height: 948px;">
    <section class="content-header d-flex align-items-center justify-content-between">
        <h1 class="m-0">
             Project Information
            <small>Project Detail Information</small>
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                    </div>
                    <div class="container mt-1">
                        <div class="card shadow-sm border-0">

                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-3 text-center">
                                        <img src="https://ui-avatars.com/api/?name=@(Model?.ProjectName)" alt="Profile Picture"
                                             class="rounded-circle img-thumbnail mb-3"
                                             style="width: 150px; height: 150px; object-fit: cover;">
                                        <h5>@Model.ProjectName</h5>
                                        <p class="text-muted">@Model.ClientName</p>
                                        <span class="badge bg-info text-dark">@Model.ProjectStatus</span>
                                    </div>

                                    <div class="col-md-9">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>Client Name:</strong> @Model.ClientName</p>
                                                <p><strong>Client URL:</strong> <a href="@Model.ClientUrl">@Model.ClientUrl</a></p>
                                                <p><strong>Phone:</strong> @Model.ContactNumber</p>
                                                <p><strong>Contact person:</strong> @Model.ContactPerson</p>
                                                <p><strong>Status:</strong> @Model.ProjectStatus</p>
                                                <p><strong>Reason:</strong> @Model.Reason</p>
                                            </div>

                                            <div class="col-md-6">
                                                <p><strong>Project Manager:</strong> @Model.ProjectManager</p>
                                                <p><strong>Delivery Manager:</strong> @Model.DeliveryManager</p>
                                                <p><strong>Project Head:</strong> @Model.ProjectHead</p>
                                                <p><strong>Start Date:</strong> @Model.ProjectStartDate.ToString("dd MMM yyyy")</p>
                                                <p><strong>End Date:</strong> @Model.ProjectEndDate.ToString("dd MMM yyyy")</p>
                                                <p><strong>Employee Count:</strong>  <span class="badge bg-warning text-dark"> @Model.ProjectEmployees.Count()</span>  </p>
                                             
                                            </div>
                                           
                                        </div>
                                    </div>
                                </div>

                                <hr />

                                @if (Model.ProjectEmployees?.Any() == true)
                                {
                                    <div class="card shadow-sm mt-3">
                                        <div class="card-header">
                                            <h4 class="mb-0"><i class="fa fa-users"></i> Project Employees</h4>
                                        </div>

                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table id="employeeTable" class="table table-hover table-striped table-bordered align-middle">
                                                    <thead class="table-dark">
                                                        <tr>
                                                            <th>Employee</th>
                                                            <th>Department</th>
                                                            <th>Designation</th>
                                                            <th>Email</th>
                                                            <th>Phone</th>
                                                            <th>Manager</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var emp in Model.ProjectEmployees)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <strong>@emp.EmployeeName</strong><br />
                                                                </td>
                                                                <td>@emp.DepartmentName</td>
                                                                <td>@emp.DesignationName</td>
                                                                <td><a href="mailto:@emp.Email">@emp.Email</a></td>
                                                                <td><a href="tel:@emp.Phone">@emp.Phone</a></td>
                                                                <td><span class="badge bg-info text-dark">@emp.ManagerName</span></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning text-center mt-3">
                                        <i class="fa fa-info-circle"></i> No Employee assigned yet.
                                    </div>
                                }

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        @await Html.PartialAsync("~/Features/shared/PmsModalPopUp.cshtml")
    </section>
</div>
<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />

<!-- FontAwesome (Icons) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function () {
        $('#employeeTable').DataTable({
            pageLength: 10,
            lengthMenu: [5, 10, 20, 50, 100],
            order: [[0, 'asc']],
        });
    });
</script>




