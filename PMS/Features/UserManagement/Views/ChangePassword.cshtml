@{
    Layout = null;
}
@model PMS.Features.UserManagement.ViewModels.ChangePasswordVm
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>PMS  | Log in</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="~/plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" sizes="180x180" href="~/PMSLogo.PNG" />
</head>
<body class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/index2.html"><b>Vipra</b>| PMS</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Change Password</p>
            <form asp-action="ChangePassword" asp-controller="UserManagement" method="post">
                <div class="form-group has-feedback">
                    <input type="password" asp-for="NewPassword" class="form-control" placeholder="Please enter new Password" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="NewPassword"></span>
                </div>
                <div class="form-group has-feedback">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <div class="checkbox icheck">
                          
                        </div>
                    </div>
                    <div class="col-xs-8">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Change Password</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    
    <script src="~/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function () {
          $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
          });
        });
    </script>
</body>
</html>