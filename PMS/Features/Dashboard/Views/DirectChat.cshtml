<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<script>
	(function () {
		let chatConnection = null;
		const currentUserId = '@name';
		const senderName = '@name';

		if (!window.chatSignalRInitialized) {
			window.chatSignalRInitialized = true;

			chatConnection = new signalR.HubConnectionBuilder()
				.withUrl("/chatHub?userId=" + encodeURIComponent(currentUserId))
				.configureLogging(signalR.LogLevel.Information)
				.withAutomaticReconnect()
				.build();

			chatConnection.serverTimeoutInMilliseconds = 60000;
			chatConnection.keepAliveIntervalInMilliseconds = 15000;

			// ✅ FIXED ReceiveMessage Handler
			chatConnection.on("ReceiveMessage", function (sender, message) {
				const chatBox = document.querySelector(".direct-chat-messages");
				if (!chatBox) return;

				const messageDiv = document.createElement("div");
				messageDiv.classList.add("direct-chat-msg");

				// ✅ Only add "right" class when the message is from current user
				if (sender === senderName) {
					messageDiv.classList.add("right");
				}

				messageDiv.innerHTML = `
					<div class='direct-chat-info clearfix'>
						<span class='direct-chat-name ${sender === senderName ? "pull-right" : "pull-left"}'>${sender}</span>
						<span class='direct-chat-timestamp ${sender === senderName ? "pull-left" : "pull-right"}'>
							${new Date().toLocaleTimeString()}
						</span>
					</div>
					<img class="direct-chat-img" src="https://ui-avatars.com/api/?name=${encodeURIComponent(sender)}" />
					<div class="direct-chat-text">${message}</div>
				`;

				chatBox.appendChild(messageDiv);
				chatBox.scrollTop = chatBox.scrollHeight;
			});

			chatConnection.onclose(err => console.warn("⚠️ Chat disconnected", err));
			chatConnection.onreconnected(id => console.log("🔄 Reconnected", id));
			chatConnection.onreconnecting(err => console.log("⏳ Reconnecting...", err));

			chatConnection.start()
				.then(() => console.log("✅ SignalR Connected"))
				.catch(err => console.error("❌ Connection Failed:", err));
		}

		// ✅ Send button handler
		document.addEventListener("click", function (e) {
			if (e.target && e.target.id === "sendBtn") {
				const messageInput = document.querySelector("input[name='message']");
				const message = messageInput?.value.trim();
				const selectedUserId = document.getElementById("selectUser")?.value;

				if (!selectedUserId) {
					alert("⚠️ Please select a user first.");
					return;
				}
				if (!message) return;

				if (chatConnection) {
					chatConnection.invoke("SendMessageToUser", selectedUserId, message, senderName)
						.catch(err => console.error("❌ Send Error:", err));
				}

				messageInput.value = "";
			}
		});

	})();
</script>

 


